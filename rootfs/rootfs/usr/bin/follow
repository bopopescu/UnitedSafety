#!/bin/sh
if [ "$#" -ne 1 ]; then
	echo -e " \033[32m"  # Green
	echo "Usage: follow [feature name]"
	echo -e "\033[39m"  #default
	echo "        This will tail the log for the specified feature"
	echo "        It will look in /var/log for the file and then in /var/log/testdata"
	exit 1
fi

if [ "messages" == "$1" ]; then
	fileName="/var/log/$1"
	fileName1="/var/log/$1.0"
else
	fileName="/var/log/$1.log"
	fileName1="/var/log/$1.log.1"
fi

touch $fileName
touch $fileName1

tail -f $fileName &
tail -f $fileName1 &

