#!/bin/bash
APP="./ethtool"
	. /usr/share/cross-compile/arm-sourcery-glibc/SOURCE_ME
	./autogen.sh
	./configure --host arm-linux-gnu CC=${CROSS_COMPILE}gcc LDFLAGS="-s"
	make
	ret=$?

	if [ 0 != "$ret" ];then
		echo "\"make\" failed"
		exit $ret
	fi

	if [ '' != "$INSTALL" ];then

		if [ ! -e "$ROOTFS_DEF_DIR" ];then
			echo "Build directory \"$ROOTFS_DEF_DIR\" does not exist"
			exit 1
		fi

		sudo cp -av "$APP" "$ROOTFS_DEF_DIR/usr/bin"

		if [ 0 != "$?" ];then
			echo "Failed to install \"$APP\""
			exit 1
		fi

	fi

exit 0
