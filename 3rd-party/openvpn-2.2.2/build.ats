#!/bin/bash
    APP=openvpn
	. /usr/share/cross-compile/arm-sourcery-glibc/SOURCE_ME
	./configure --host=arm-linux-gnu CC=${CROSS_COMPILE}gcc LD=${CROSS_COMPILE}ld AR=${CROSS_COMPILE}ar --with-lzo-headers=../lzo-2.06/include/ --with-lzo-lib=../lzo-2.06/src/.libs/ --with-ssl-headers=../openssl-1.0.1c/include --with-ssl-lib=../openssl-1.0.1c/
	make -j 4

	ret=$?

	if [ 0 != "$ret" ];then
		echo "\"make\" failed"
		exit $ret
	fi

	if [ '' != "$INSTALL" ];then

		if [ ! -e "$ROOTFS_DEF_DIR" ];then
			echo "Default rootfs directory \"$ROOTFS_DEF_DIR\" does not exist"
			exit 1
		fi

		sudo cp -av $APP "$ROOTFS_DEF_DIR/sbin"

		if [ 0 != "$?" ];then
			echo "Failed to install \"$APP\""
			exit 1
		fi

	fi

exit 0
