#!/bin/bash
    APP=pptp
	. /usr/share/cross-compile/arm-sourcery-glibc/SOURCE_ME
	make CC=${CROSS_COMPILE}gcc -j 4

	ret=$?

	if [ 0 != "$ret" ];then
		echo "\"make\" failed"
		exit $ret
	fi

	if [ '' != "$INSTALL" ];then

		if [ ! -e "$ROOTFS_DEF_DIR" ];then
			echo "Default rootfs directory \"$ROOTFS_DEF_DIR\" does not exist"
			exit 1
		fi

		sudo cp -av $APP "$ROOTFS_DEF_DIR/usr/sbin"

		if [ 0 != "$?" ];then
			echo "Failed to install \"$APP\""
			exit 1
		fi

	fi

exit 0
