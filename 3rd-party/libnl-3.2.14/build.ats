#!/bin/bash
	. /usr/share/cross-compile/arm-sourcery-glibc/SOURCE_ME
	./configure --host=arm-linux-gnu CC=${CROSS_COMPILE}gcc LD=${CROSS_COMPILE}ld AR=${CROSS_COMPILE}ar
	make -e
	ret=$?
	if [ 0 != "$ret" ];then
		echo "\"make\" failed"
		exit $ret
	fi
	if [ '' != "$INSTALL" ];then
		if [ ! -e "$ROOTFS_DEF_DIR" ];then
			echo "Default rootfs directory \"$ROOTFS_DEF_DIR\" does not exist"
			exit 1
		fi
		LIB1="./lib/.libs/libnl-genl-3.so.200.11.0"
		sudo cp -av "$LIB1" "$ROOTFS_DEF_DIR/usr/lib/libnl-genl-3.so.200"
		if [ 0 != "$?" ];then
			echo "Failed to install \"$LIB1\""
			exit 1
		fi
		LIB2="./lib/.libs/libnl-3.so.200.11.0"
		sudo cp -av "$LIB2" "$ROOTFS_DEF_DIR/usr/lib/libnl-3.so.200"
		if [ 0 != "$?" ];then
			echo "Failed to install \"$LIB2\""
			exit 1
		fi

	fi
exit 0
